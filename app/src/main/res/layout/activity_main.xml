<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="FORM BIODATA"
        android:fontFamily="@font/klein_text_book_trial"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="32sp"
        android:textColor="@color/grey"
        android:layout_marginTop="48dp"
        />

    <!--    Text View Content-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:text="Nama"
        android:textSize="20sp"
        android:layout_below="@+id/title"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="48dp"
        android:textColor="@color/grey"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_age"
        android:text="Umur"
        android:textSize="20sp"
        android:layout_below="@+id/et_name"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/grey"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hp"
        android:text="No Handphone"
        android:textSize="20sp"
        android:layout_below="@+id/et_age"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/grey"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_address"
        android:text="Alamat"
        android:textSize="20sp"
        android:layout_below="@+id/et_hp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/grey"/>

    <!--    Edit Text Content-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_name"
        android:hint="Masukkan nama"
        android:fontFamily="@font/klein_text_book_trial"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_age"
        android:hint="Masukkan umur"
        android:inputType="number"
        android:layout_below="@+id/tv_age"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_hp"
        android:hint="Masukkan No Handphone"
        android:inputType="number"
        android:layout_below="@+id/tv_hp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_address"
        android:hint="Masukkan alamat"
        android:fontFamily="@font/klein_text_book_trial"
        android:layout_below="@+id/tv_address"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"/>

    <!--    button-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_submit"
        android:background="@drawable/rectangle_shape"
        android:text="SUBMIT"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:layout_below="@+id/et_address"
        android:layout_margin="24dp"/>

    <!--    footer-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/footer"
        android:text="UAS - 124190026"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="16sp"
        android:textColor="@color/grey2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        />





</RelativeLayout>